                                        </Label.FormattedText>
                                    </Label>
                                </Grid>
                            </SwipeView.Content>
                        </SwipeView>
                    </ViewCell> -->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <RelativeLayout
                WidthRequest="74"
                HeightRequest="70"
                HorizontalOptions="End"
                VerticalOptions="End">
                <Button
                    BackgroundColor="DodgerBlue"
                    Command="{Binding Path=CreateNew, Mode=OneTime}"
                    WidthRequest="54"
                    HeightRequest="54">
                    <Button.ImageSource>
                        <FontImageSource
                            FontFamily="{x:StaticResource MaterialFontFamily}"
                            Color="White"
                            Glyph="{x:Static v:Glyphs.Pencil}"
                        />
                    </Button.ImageSource>
                    <Button.CornerRadius>
                        <OnPlatform x:TypeArguments="x:Int32">
                            <On Platform="iOS" Value="26" />
                            <On Platform="Android" Value="28" />
                        </OnPlatform>
                    </Button.CornerRadius>
                    <Button.Margin>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS" Value="8" />
                            <On Platform="Android" Value="8" />
                        </OnPlatform>
                    </Button.Margin>
                    <Button.IsVisible>
                        <OnPlatform x:TypeArguments="x:Boolean">
                            <On Platform="iOS" Value="false" />
                            <On Platform="Android" Value="true" />
                            <On Platform="UWP" Value="false" />
                        </OnPlatform>
                    </Button.IsVisible>
                </Button>
            </RelativeLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>

                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                FontAttributes="None"
                                FontSize="Subtitle"
                                Text="{Binding Path=Title, Mode=OneWay}" 
                                d:Text="{Binding Path=Title}" 
                            />
                                <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontAttributes="None"
                                FontSize="Subtitle">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <FormattedString.Spans>
                                                <Span FontSize="Small" Text="{x:Static loc:AppResources.ListCompletedLabel}" />
                                                <Span FontSize="Small" Text="4" />
                                                <Span FontSize="Micro" Text="/" />
                                                <Span FontSize="Micro" Text="6" />
                                            </FormattedString.Spans>
                                        </FormattedString>
